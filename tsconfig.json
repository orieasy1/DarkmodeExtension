{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ES2022"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
